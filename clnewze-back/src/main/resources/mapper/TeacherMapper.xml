<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.clnewze.back.clnewzeback.mapper.TeacherMapper">
  
  <!-- <select id="selectList" resultType="java.util.List"> -->
  <select id="selectList" resultType="Teacher">
    select 
      t.tno,
      tu.user_name,
      t.title,
      t.img,
      t.major,
      t.place, 
      t.contents, 
      t.uploadDate, 
      tu.id  
    from teacher t
    left join t_user tu
    on t.uno = tu.uno
    where 1=1
    <if test="major != 'null'">
      and major=#{major}
    </if>
    limit #{limit} offset #{pageNo}
  </select>

  <select id="selectListAllCount" resultType="int">
    select count(*) from teacher
  </select>
  
  
</mapper>