<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.clnewze.back.clnewzeback.mapper.TeacherMapper">
  
  <!-- <select id="selectList" resultType="java.util.List"> -->
  <select id="selectList" resultType="Teacher">
    select 
      t.tno,
      tu.user_name,
      t.title,
      t.img,
      t.major,
      t.place, 
      t.contents, 
      t.upload_date, 
      tu.id  
    from teacher t
      left join t_user tu
    on t.uno = tu.uno
    <where>
      <if test="major != 'null'">
        and major=#{major}
      </if>
      <if test="uno !=null and uno gt 0">
        and tu.uno = #{uno}
      </if>
    </where>
    limit #{limit} offset #{pageNo}
  </select>

  <select id="selectListAllCount" resultType="int">
    select count(*) from teacher
  </select>
  
  
</mapper>