<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.clnewze.back.clnewzeback.mapper.TeacherMenuCategoryMapper">
  
  <!-- 사용 Menu 리스트 출력 -->
  <select id="category" resultType="TeacherMenuCategory">
    select * from master_menu_teacher order by orderby asc;
  </select>
  
  <!-- TeacherMenu 생성 -->
  <insert id="createTeacherMenu">
    INSERT INTO music.master_menu_teacher  (name, category) value (#{name},#{category})
  </insert>

<!-- orderby 갱신, 테이블 추가시 orderby 부여 -->
  <update id="orderbyChangeTeacherMenu">
    update music.master_menu_teacher set orderby=#{changeOrder} where mtno = #{changeOrder};
  </update>
</mapper>